{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"target": "es6",
		"lib": ["es2019"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strict": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"declarations"
	]
}